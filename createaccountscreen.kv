<CreateAccountScreen>:
    
    
    BoxLayout:
        orientation: "vertical"
        
        spacing: "10dp"
        MDToolbar:                     
            title: "Create Account"
            md_bg_color: [10/255, 62/255, 84/255, 1]#app.theme_cls.accent_color
            # pos_hint: {"center_x": 0, "top": 1}
            
        ScrollView:
            MDBoxLayout:
                orientation: 'vertical'
                adaptive_height: True
                padding: dp(48)
                spacing: dp(15)
                MDLabel:
                    text: "Shop Name :"
                    theme_text_color: "Custom"
                    text_color: 10/255, 62/255, 84/255, 1
                MDTextField:
                    id: shop_name
                    color_mode: 'custom'
                    line_color_focus: 10/255, 62/255, 84/255, 1
                MDLabel:
                    text: "Email ID :"
                    theme_text_color: "Custom"
                    text_color: 10/255, 62/255, 84/255, 1
                MDTextField:
                    id: email
                    color_mode: 'custom'
                    line_color_focus: 10/255, 62/255, 84/255, 1
                MDLabel:
                    text: "Password :"
                    theme_text_color: "Custom"
                    text_color: 10/255, 62/255, 84/255, 1
                MDTextField:
                    id: password
                    password:True                    
                    color_mode: 'custom'
                    line_color_focus: 10/255, 62/255, 84/255, 1
                MDRectangleFlatButton:
                    text: "Create Account"                
                    text_color: 1, 1, 1, 1
                    md_bg_color: 10/255, 62/255, 84/255, 1
                    pos_hint: {"center_x": .75, "top": .45}            
                    on_release: 
                        # Need to refer to the FirebaseLoginScreen
                        root.parent.parent.sign_up(email.text, password.text, shop_name.text)
                        Animation(opacity=0, duration=0.5).start(message)
                        sign_in_button.opacity = 0
                        sign_in_button.disabled = True
                        root.parent.parent.display_loading_screen()   

                MDRectangleFlatButton:
                    text: "Back"                
                    text_color: 1, 1, 1, 1
                    md_bg_color: 10/255, 62/255, 84/255, 1
                    pos_hint: {"center_x": .25, "top": .225}
                    on_release:
                        root.parent.transition = SlideTransition(direction="right")
                        root.parent.current = root.parent.current = "welcome_screen"
                        root.parent.transition = SlideTransition(direction="left")
    
                ThemedMessage:  
                    id: message
                    size_hint: .9 ,.1
                    pos_hint: {"center_x": .5, "center_y": .1}
                    opacity: 0
                    bg_color: (root.parent.parent.primary_color[:3] + [.7] if (type(root.parent.parent.primary_color) != tuple) else root.parent.parent.primary_color[:3] + tuple([.7])) if root.parent else (0,0,0,1)
                    color: root.parent.parent.secondary_color if root.parent else (0,0,0,1)
                    on_text:
                        Animation(opacity=1, duration=0.5).start(self)

                ThemedButton:
                    id: sign_in_button
                    text: "[u]Sign in[/u]"
                    size_hint: .2 ,.05
                    pos_hint: {"right": .85, "center_y": .1}
                    opacity: 0
                    disabled: True
                    bg_color: (0,0,0,0)# root.parent.parent.primary_color if root.parent else (0,0,0,1)
                    color: root.parent.parent.secondary_color if root.parent else (0,0,0,1)
                    on_release:
                        root.parent.current = "sign_in_screen"
                        root.parent.parent.ids.sign_in_screen.ids.email.text = email.text
                        root.parent.parent.ids.sign_in_screen.ids.password.text = password.text
    
    
